<div class='details'>
  {{#if KEY}}
    <p>{{t "details.info"}}</p>

    <dl>
      <dt>{{t "details.issue.label"}}</dt>
      <dd><a href="{{URL}}" target="_blank">{{KEY}}</a></dd>

      <dt>{{t "details.status.label"}}</dt>
      <dd>{{STATUS}}</dd>

      <dt>{{t "details.resolution.label"}}</dt>
      <dd>{{RESOLUTION}}</dd>

      <dt>{{t "details.assignee.label"}}</dt>
      <dd>{{ASSIGNEE}}</dd>
    </dl>
  {{else}}
    <p>{{t "details.errorFetching"}}</p>
  {{/if}}
</div>
